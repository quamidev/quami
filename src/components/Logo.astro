---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<span class:list={["logo", className]}>
  quami
  <svg class="logo-bolt" viewBox="0 0 50 10" preserveAspectRatio="none">
    <path d="M0,6 L15,6 L20,2 L25,6 L30,2 L35,6 L50,6" />
  </svg>
</span>

<style>
  .logo {
    font-size: 1.125rem;
    font-weight: 800;
    color: currentColor;
    letter-spacing: -0.04em;
    position: relative;
    display: inline-block;
  }

  .logo-bolt {
    position: absolute;
    bottom: -3px;
    left: 0;
    width: 100%;
    height: 6px;
  }

  .logo-bolt path {
    fill: none;
    stroke: var(--yellow);
    stroke-width: 2.5;
    stroke-linecap: round;
    stroke-linejoin: round;
  }

  @media (min-width: 640px) {
    .logo {
      font-size: 1.25rem;
    }

    .logo-bolt {
      height: 8px;
      bottom: -4px;
    }
  }
</style>
